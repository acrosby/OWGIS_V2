	<BackgroundLayers BBOX="-180,90,-90,180" server="http://viewer.coaps.fsu.edu/geoserver/wms">
		<layer name="comm:pyrResult512" featureInfo="comm:gebco"/> 
	</BackgroundLayers>

	
	<!-- Atmosphere layers -->
    <MainLayers BBOX="-123.828622,-2.459646,-58.255699,48.7692"
				format="image/gif"  server="http://146.201.212.61/ncWMS/wms"
				ncWMS="true" >  
		<layer Menu="latest,atm,d2,wind" EN="Wind speed at 10m"
			   ES="Velocidad de viento a 10m " name="atm_forecast_latest/wind"  />
		<layer Menu="latest,atm,d2,psfc" EN="Surface Pressure"
			   ES="Presion" name="atm_forecast_latest/PSFC" />
		<layer Menu="latest,atm,d2,t2" EN="Air Temperature at 2m"
			   ES="Temperatura a 2mts" name="atm_forecast_latest/T2" />
		<layer Menu="latest,atm,d2,sst" EN="Sea Surface Temperature" ES="Temperatura superfical del mar"
			   name="atm_forecast_latest/SST" />
		<layer Menu="latest,atm,d2,tsk" EN="Surface Skin Temperature" ES="Temperatura en la piel de la superficie"
			   name="atm_forecast_latest/TSK" />
		<layer Menu="latest,atm,d2,rainc" EN="Convective Precipitacion" ES="Precipitacion"
